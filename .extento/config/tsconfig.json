{
    "compilerOptions": {
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "esnext",
        "jsx": "react",
        "allowJs": true,
        "types": [
            "chrome",
            "node"
        ],
        "baseUrl": ".",
        "rootDir": "../../",
        "paths": {
            "@workspaces/*": [
                "../../workspaces/*"
            ],
            "@browser/*": [
                "../../browser/*"
            ],
            "@shared": [
                "../../shared/index.ts"
            ],
            "@shared/*": [
                "../../shared/*"
            ],
            "@extento/*": [
                "../library/src/*"
            ],
            "@codegen/*": [
                "../codegen/src/*"
            ]
        }
    },
    "references": [
        { "path": "../codegen/tsconfig.extento.json" },
        { "path": "../entries/tsconfig.extento.json" },
        { "path": "../library/tsconfig.extento.json" },
        { "path": "../../browser/tsconfig.extento.json" },
        { "path": "../../shared/tsconfig.extento.json" },
        { "path": "../../workspaces/admin/tsconfig.extento.json" },
        { "path": "../../workspaces/candidate/tsconfig.extento.json" },
        { "path": "../../workspaces/devops/tsconfig.extento.json" },
        { "path": "../../workspaces/manager/tsconfig.extento.json" },
        { "path": "../../workspaces/tester/tsconfig.extento.json" },
    ],
    "include": [
        "../../**/*",
        "../../**/*.json",
        "../../.extento/**/*"
    ],
    "exclude": ["node_modules", "chrome-v3"],
    "files": ["./typings.d.ts"]
}
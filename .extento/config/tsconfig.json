{
    "compilerOptions": {
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "esnext",
        "types": [
            "chrome",
            "node"
        ],
        "noEmit": true,
        "allowJs": true,
        "baseUrl": ".",
        "rootDir": "../../",
        "paths": {
            "@workspaces/*": [
                "../../workspaces/*"
            ],
            "@browser/*": [
                "../../browser/*"
            ],
            "@shared/*": [
                "../../shared/*"
            ],
            "@extento/*": [
                "../library/src/*"
            ],
            "@codegen/*": [
                "../codegen/src/*"
            ],
            "@config": [
                "../codegen/src/config.json"
            ]
        }
    },
    "references": [
        { "path": "../codegen" },
        { "path": "../entries" },
        { "path": "../library/src" },
        { "path": "../../browser" },
        { "path": "../../shared" },
        { "path": "../../workspaces/admin" },
        { "path": "../../workspaces/candidate" },
        { "path": "../../workspaces/devops" },
        { "path": "../../workspaces/manager" },
        { "path": "../../workspaces/tester" },
    ],
    "include": [
        "../../*.js",
        "../../**/*",
        "../../**/*.json"
    ],
    "exclude": ["node_modules", "dist/*.js"],
    "files": ["./typings.d.ts"]
}
{
    "compilerOptions": {
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "jsx": "react",
        "moduleResolution": "node",
        "target": "esnext",
        "types": [
            "chrome",
            "node"
        ],
        "baseUrl": ".",
        "rootDir": "../../",
        "paths": {
            "@extento/*": [
                "../library/src/*"
            ],
            "@codegen/*": [
                "../codegen/src/*"
            ],
            "@workspaces/*": [
                "../../src/workspaces/*"
            ],
            "@browser/*": [
                "../../src/browser/*"
            ],
            "@shared/*": [
                "../../src/shared/*"
            ],
            "@config": [
                "../codegen/src/config.json"
            ]
        }
    },
    "references": [
        { "path": "../codegen" },
        { "path": "../entries" },
        { "path": "../library" },
        { "path": "../../src/browser" },
        { "path": "../../src/shared" },
        { "path": "../../src/workspaces/admin" },
        { "path": "../../src/workspaces/candidate" },
        { "path": "../../src/workspaces/devops" },
        { "path": "../../src/workspaces/manager" },
        { "path": "../../src/workspaces/tester" },
    ],
    "include": [
        "../../**/*",
        "../../**/*.json"
    ],
    "exclude": ["node_modules"],
    "files": ["./typings.d.ts"]
}